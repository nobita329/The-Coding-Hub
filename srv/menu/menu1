pause(){ read -p "â†³ Press Enter to continue..." _; }

# ---------- UI BLOCKS ----------
hr(){ echo -e "${C5}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"; }
fr(){ echo -e "${C5}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"; }
ln(){ printf "${C5}â”‚${NC} %-44s ${C5}â”‚${NC}\n" "$1"; }

# ---------- BANNER ----------
banner(){
clear
hr
ln "ğŸš€ CODING HUB â€” TERMINAL CONTROL PANEL"
