}

# ===================== EXTERNAL MENU =====================
external_menu(){
while true; do banner
hr
ln "ğŸŒ EXTERNAL MENU"
ln ""
ln "1) External Tool 1"
ln "2) External Tool 2"
ln "3) External Tool 3"
ln "4) Back"
fr
read -p "Select â†’ " e
case $e in
1) echo "External Tool 1 placeholder"; pause ;;
2) echo "External Tool 2 placeholder"; pause ;;
3) echo "External Tool 3 placeholder"; pause ;;
4) break ;;
*) echo -e "${C4}Invalid option${NC}"; pause ;;
esac
done
}

